{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": { "cache": false, "dependsOn": ["^build"] },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "test:watch": {
      "cache": false
    },
    "test:e2e": {},
    "lint": { "cache": false },
    "start": {
      "cache": false
    },
    "start:dev": {
      "cache": false
    }
  }
}
